<!DOCTYPE html>
<html>
  <head>
    <title>Depot</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  
    <header class="main">
      <%= image_tag 'logo.svg', alt: 'The Pragmatic Bookshelf' %>
      <h1><%= @page_title %></h1>
    </header>

    <section class="content">
      <nav class="side_nav">

<!-- Moving the cart to the menu -->
<!-- Included files: _line_items , _cart, show -->

        <% if @cart%>
          <div id="cart" class="carts">
            <%= render_if @cart && @cart.line_items.any?, @cart%>
          </div>
        <%end%>

        <ul>
          <li><%= link_to 'Home', store_index_url %></li>
          <li><%= link_to 'Line items', line_items_path %></li>

          <li><%#= link_to 'Cart', cart_path(session[:cart_id]) %></li>

          <li><a href="/questions">Questions</a></li>
          <li><a href="/news">News</a></li>
          <li><a href="/contact">Contact</a></li>
          <li><%= link_to 'Login', login_url %></li>

        </ul>


        <% if session[:user_id] %>
          <nav class="logged_in_nav">
            <ul>
              <li><%= link_to 'Orders',   orders_path   %></li>
              <li><%= link_to 'Products', products_path %></li>
              <li><%= link_to 'Users',    users_path    %></li>
              <li><%= button_to 'Logout', logout_path, method: :delete   %></li>
            </ul>
          </nav>
        <% end %>

        <hr style = "border: 1px solid green">

        <h1 class="time">
          <%= Time.now.strftime("%H:%M:%S")%>
        </h1>

        <hr style = "border: 1px solid green">

        <small style="color: white">
          UserSession_id:         <%= session[:user_id] %><br>
          Session_id:     <br>    <%= session[:session_id] %><br>
          Cart_id:                <%= session[:cart_id] %><br>
          Session_counter:        <%= session[:counter] %><br>
        </small>

      </nav>

      <main class='<%= controller.controller_name %>'>
        <%= yield %>
      </main>
    </section>

  </body>
</html>
